{# Color scheme #}
{# Tailwind needs to see full class names. Can't use variables within classes as a result #}
{% if config.colorPreference == 'dark' %}
  {% set dialogBgColor = "bg-black/30" %}
  {% set dialogBorderColor = "border-white/10" %}
  {% set dividerColor = "before:text-gray-300" %}
  {% set headerTextColor = "text-gray-50" %}
  {% set tagBgColor = "bg-gray-200/30" %}
  {% set textColor = "text-gray-100" %}
{% elif config.colorPreference == 'light' %}
  {% set dialogBgColor = "bg-white/30" %}
  {% set dialogBorderColor = "border-black/10" %}
  {% set dividerColor = "before:text-gray-600" %}
  {% set headerTextColor = "text-gray-950" %}
  {% set tagBgColor = "bg-gray-400/30" %}
  {% set textColor = "text-gray-900" %}
{% else %}
  {% set dialogBgColor = "bg-white/30 dark:bg-black/30" %}
  {% set dialogBorderColor = "border-black/10 dark:border-white/10" %}
  {% set dividerColor = "before:text-gray-600 dark:before:text-gray-300" %}
  {% set headerTextColor = "text-gray-950 dark:text-gray-50" %}
  {% set tagBgColor = "bg-gray-400/30 dark:bg-gray-200/30" %}
  {% set textColor = "text-gray-900 dark:text-gray-100" %}
{% endif %}

{# Calculate shutter speed #}
{# https://photo.stackexchange.com/questions/108817/shutter-speed-from-the-exif-shutterspeedvalue #}
{% if imgObj.exif.ShutterSpeedValue %}
  {% set base = 2**imgObj.exif.ShutterSpeedValue %}
  {% set roundedBase = base | round(-1) %}
  {% set calculatedShutterSpeed = '1/' + roundedBase  %}
{% endif %}

<div class="flex h-screen w-screen items-center justify-center" style="background-image: url('https://images.unsplash.com/photo-1506252374453-ef5237291d83?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=3992&q=80'); background-size: cover" id="">
  <dialog open class="transition-all max-w-lg max-h-[90vh] overflow-x-hidden overflow-y-scroll rounded-lg p-10 backdrop-blur-3xl border-[1px] focus-visible:outline-0 {{ dialogBgColor }} {{ dialogBorderColor }}" id="details-dialog">
    <button class="absolute appearance-none right-0 top-0 p-4 focus-visible:outline-0 hover:text-opacity-50 {{ textColor }}" onclick="(function(){ document.getElementById('details-dialog').close();})(this)">
      {%- include "src/_includes/icons/close.njk" %}
      <span class="sr-only">Close</span>
    </button>

    <h1 class="mb-2 text-2xl font-semibold {{ headerTextColor }}">{{ imgObj.title }}</h1>
    
    <p class="max-h-44 overflow-scroll leading-7 {{ textColor }} mb-4">{{ imgObj.description }}</p>

    {% if config.showExifData == 'true' -%}
      <div class="mb-8">
        {% if imgObj.exif.LensMake  %}
          <div class="mb-2 {{ textColor }}">
            <span class="inline-block align-baseline">
              {%- include "src/_includes/icons/camera.njk" -%}
            </span>
            <span class="ml-2 inline-block align-text-bottom max-w-xs truncate">{{ imgObj.exif.LensMake }}</span>
          </div>
        {% endif %}

        {% if imgObj.exif.LensModel %}
          <div class="mb-2 {{ textColor }}">
            <span class="inline-block align-baseline">
              {%- include "src/_includes/icons/aperture.njk" -%}
            </span>
            <span class="ml-2 inline-block align-text-bottom max-w-xs truncate">{{ imgObj.exif.LensModel }}</span>
          </div>
        {% endif %}

        <div class="mb-2 {{ textColor }}">
          <span class="inline-block align-baseline">
            {%- include "src/_includes/icons/settings.njk" -%}
          </span>

          <span class="inline-block align-text-bottom">
            {% if imgObj.exif.FocalLengthIn35mmFormat or imgObj.exif.FocalLength -%}
              <span class="ml-2">{{ imgObj.exif.FocalLengthIn35mmFormat or imgObj.exif.FocalLength }}mm</span>
            {%- endif -%}

            {%- if imgObj.exif.FNumber -%}
              <span class="ml-2 [&:not(:first-child):before]:mr-2 [&:not(:first-child):before]:content-['\00B7'] {{ dividerColor }}">Æ’{{ imgObj.exif.FNumber }}</span>
            {%- endif -%}
            
            {%- if calculatedShutterSpeed -%}
            <span class="ml-2 [&:not(:first-child):before]:mr-2 [&:not(:first-child):before]:content-['\00B7'] {{ dividerColor }}">{{ calculatedShutterSpeed }}s</span>
            {%- endif -%}

            {%- if imgObj.exif.ISOSpeed or imgObj.exif.ISO -%}
              <span class="ml-2 [&:not(:first-child):before]:mr-2 [&:not(:first-child):before]:content-['\00B7'] {{ dividerColor }}">ISO{{ imgObj.exif.ISOSpeed  or imgObj.exif.ISO }}</span>
            {%- endif %}
          </span>
        </div>
      </div>
    {% endif -%}

    <div class="w-full text-sm {{ textColor }}">
      {% for tag in imgObj.tags -%}
        <span class="mr-2 mb-2 px-3 py-1 inline-block rounded-xl {{ tagBgColor }}">{{ tag }}</span>
      {%- endfor -%}
    </div>
  </dialog>
</div>